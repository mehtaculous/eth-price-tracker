{
  "manifest_version": 3,
  "name": "Ethereum Price Tracker",
  "version": "1.0",
  "description": "Track the current price of Ethereum",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "alarms"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "host_permissions": ["https://api.coingecko.com/"],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
